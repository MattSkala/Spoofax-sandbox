module minijava

imports
  
  common

lexical syntax

 	Tag = [a-zA-Z][a-zA-Z0-9]*
 	Word = ~[\<\>]+
 	
lexical restrictions
	Word -/- ~[\<\>]
 
context-free start-symbols
  
  Program Elem

context-free syntax
  
  Program.Program = Elem
  
	Elem.Node = 
	[
 		<[Tag]>
 			[Elem*]
 		</[Tag]>
 	]	

	Elem.Text = Word+ {longest-match}